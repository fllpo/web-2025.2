<script>


    function atualizarVisualizacao(produtoId, novaQuantidade, preco) {
        const subtotalElement = document.getElementById(`subtotal-${produtoId}`);
        const novoSubtotal = novaQuantidade * preco;

        if (subtotalElement) {
            subtotalElement.textContent = `R$ ${novoSubtotal.toFixed(2)}`;
        }

        let totalGeral = 0;
        let totalItens = 0;

        document.querySelectorAll('.quantidade-input').forEach(input => {
            const qtd = parseInt(input.value) || 0;
            const preco = parseFloat(input.dataset.preco) || 0;
            totalGeral += qtd * preco;
            totalItens += qtd;
        });

        document.getElementById('valor-total').textContent = `R$ ${totalGeral.toFixed(2)}`;
        document.getElementById('total-itens').textContent = totalItens;
    }

    function debouncedAtualizarQuantidade(produtoId, quantidade, preco) {
        const quantidadeNum = parseInt(quantidade);

        if (isNaN(quantidadeNum) || quantidadeNum < 1) {
            return;
        }

        atualizarVisualizacao(produtoId, quantidadeNum, preco);
        atualizarQuantidadeBackend(produtoId, quantidadeNum);

    }

    async function atualizarQuantidadeBackend(produtoId, quantidade) {
        try {
            const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

            const response = await fetch(`/carrinho/${produtoId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': csrfToken
                },
                body: JSON.stringify({ quantidade: parseInt(quantidade) })
            });

            const data = await response.json();

            if (!response.ok) {
                alert(data.message || 'Erro ao atualizar quantidade');
                location.reload();
            }
        } catch (error) {
            console.error('Erro:', error);

            const loadingIndicator = document.getElementById(`loading-${produtoId}`);
            if (loadingIndicator) {
                loadingIndicator.classList.add('hidden');
            }

            alert('Erro ao atualizar quantidade');
            location.reload();
        }
    }

    async function removerItem(produtoId) {
        if (!confirm('Deseja remover este item do carrinho?')) return;

        try {
            const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

            const response = await fetch(`/carrinho/${produtoId}`, {
                method: 'DELETE',
                headers: {
                    'X-CSRF-TOKEN': csrfToken
                }
            });

            const data = await response.json();

            if (response.ok) {
                const elemento = document.getElementById(`item-${produtoId}`);
                if (elemento) {
                    elemento.classList.add('removing');

                    setTimeout(() => {
                        elemento.remove();

                        const itensRestantes = document.querySelectorAll('.item-carrinho');
                        if (itensRestantes.length === 0) {
                            location.reload();
                        } else {
                            let totalGeral = 0;
                            let totalItens = 0;

                            document.querySelectorAll('.quantidade-input').forEach(input => {
                                const qtd = parseInt(input.value) || 0;
                                const preco = parseFloat(input.dataset.preco) || 0;
                                totalGeral += qtd * preco;
                                totalItens += qtd;
                            });

                            document.getElementById('valor-total').textContent = `R$ ${totalGeral.toFixed(2)}`;
                            document.getElementById('total-itens').textContent = totalItens;
                        }
                    }, 300);
                }
            } else {
                alert(data.message || 'Erro ao remover item');
            }
        } catch (error) {
            console.error('Erro:', error);
            alert('Erro ao remover item');
        }
    }

    async function limparCarrinho() {
        if (!confirm('Deseja limpar todo o carrinho?')) return;

        try {
            const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

            const response = await fetch('/carrinho/limpar/tudo', {
                method: 'DELETE',
                headers: {
                    'X-CSRF-TOKEN': csrfToken
                }
            });

            const data = await response.json();

            if (response.ok) {
                location.reload();
            } else {
                alert(data.message || 'Erro ao limpar carrinho');
            }
        } catch (error) {
            console.error('Erro:', error);
            alert('Erro ao limpar carrinho');
        }
    }
</script>
